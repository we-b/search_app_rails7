<header class='top-page-header'>
  <div class='search-bar-contents'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">検索</button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li class="user_name" >ユーザー名： <%= "#{current_user.nickname}" %></li>
      <li class="logout" ><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      <% else %>
      <li class="login"><%= link_to 'ログイン', new_user_session_path %></li>
      <li class="sign-up"><%= link_to '新規登録', new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</header>